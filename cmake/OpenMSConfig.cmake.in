find_dependency(Qt6 @QT_MIN_VERSION@ COMPONENTS @OpenMS_QT_COMPONENTS@)
find_dependency(XercesC)
find_dependency(Eigen3 3.3.4)
find_dependency(LIBSVM 2.91)

