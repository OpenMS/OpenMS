set(OPENMS_BIN_DIR "@PACKAGE_INSTALL_BIN_DIR@")
set(OPENMS_DOC_DIR "@PACKAGE_INSTALL_DOC_DIR@")
set(OPENMS_LIB_DIR "@PACKAGE_INSTALL_LIB_DIR@")

## The targets file
include("${OPENMS_CMAKE_DIR}/@_OPENMS_EXPORT_FILE@")
